{
  "audio": "pipewire",
  "bootloader": "systemd-bootctl",
  "!encryption-password": "supersecret",
  "filesystem": "btrfs",
  "gfx_driver": "VMware / VirtualBox (open-source)",
  "harddrive": {
    "path": "/dev/sda"
  },
  "hostname": "archlinux-thinkpad",
  "kernels": ["linux"],
  "keyboard-language": "pl",
  "mirror-region": "Worldwide",
  "nic": {
    "NetworkManager": true
  },
  "ntp": true,
  "packages": ["neovim", "git", "wget", "zsh", "vim", "vi"],
  "profile": "gnome",
  "services": ["docker"],
  "superusers": {
    "devel": {
      "!password": "devel"
    }
  },
  "sys-encoding": "utf-8",
  "sys-language": "en_US",
  "timezone": "Poland",
  "superusers": {
    "jakub": { "!password": "root" }
  }
}
